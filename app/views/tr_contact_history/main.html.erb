              <div style="float:left;">♦︎ 社員名　　 ： 　</div>
                <div class="cp_ipselect cp_sl01" style="float:left;"><%= f.collection_select(:ms_hirise_staff_id, @staffs, :staff_no, :staff_name) %></div>
              <div style="clear: both;">
                <button type="f.submit" class="btn-square">連　絡</button>
              </div>
            <% end %>
